      $("#tod").removeAttr("hidden");
      $("#tod").find(".count").text(numtod);
      }
      if(row.sd != undefined){
      var numtsc = row.tsc;
      $("#sd").removeAttr("hidden");
      $("#sd").find(".count").text(numtsc);
      }
      }
