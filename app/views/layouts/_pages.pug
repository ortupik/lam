extends _default

block vars

block default
  section.uk-section.uk-section-small
    div.uk-container
      div.uk-grid-medium.uk-child-width-1-1(uk-grid)

        div.uk-text-center
          if page.breadcrumbs
            ul.uk-breadcrumb.uk-flex-center.uk-margin-remove
              li: a(href="/") Home
              each x in page.breadcrumbs
                li: a(href=x.href)= x.name
          if page.title
            h1.uk-margin-small-top.uk-margin-remove-bottom= page.title
          if page.quantity
            div.uk-text-meta.uk-margin-xsmall-top Found #{page.quantity} items 

        div
          block pages
