      $("#nou").removeAttr("hidden");
      $("#nou").find(".count").text(numU);
      }
      if(row.nhw != undefined){
      var numH = row.nhw;
      $("#nhw").removeAttr("hidden");
      $("#nhw").find(".count").text(numH);
      }
      if(row.tsc != undefined){
      var numtsc = row.tsc;
      $("#tsc").removeAttr("hidden");
