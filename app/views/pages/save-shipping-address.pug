extends /layouts/_save-shipping

block vars
  -
    page = {
      title: 'Save Shipping Address'
    } 

block save-shipping
  div.uk-grid-medium(uk-grid)

     //- Form
  div#address_form.uk-form-stacked.uk-width-1-1.tm-checkout
    div.uk-grid-medium.uk-child-width-1-1(uk-grid)

      //- Payment
      section
        div.uk-card.uk-card-small.uk-card
          
          div.uk-card-body
            div.uk-card-title Select Address
            br
            div#payment_mode(class="uk-grid-small " +
                      "uk-grid-match " +
                      "uk-child-width-1-1 " +
                      "uk-child-width-1-3@s " +
                      "uk-flex-middle"
                uk-switcher="toggle: > * > .tm-choose"
                uk-grid)

              each address,index in addresses
                div.mode(mode=index, id=index, shipping_id=address._id)
                  a.tm-choose(href="#")
                    div.tm-choose-title #{address.address}
                    div.tm-choose-description #{address.email}

              div.mode(mode="add")
                a.tm-choose(href="#")
                  div.tm-choose-title Add Address
    //- Form
    form#save_shipping_form.uk-form-stacked.uk-width-1-1.tm-checkout(class="uk-width-expand@m")
      div.uk-grid-medium.uk-child-width-1-1.uk-flex-center(uk-grid)

        //- Contact Information
        section
          h4.uk-text-muted Shipping Information
          div.uk-card.uk-card-default.uk-card-small.uk-card-body.tm-ignore-container
            div(class="uk-grid-small " +
                      "uk-child-width-1-1 " +
                      "uk-child-width-1-3@s"
                uk-grid)

              div
                label
                  div.uk-form-label.uk-form-label-required First Name
                  input#fname.uk-input(type="text" required)

              div
                label
                  div.uk-form-label.uk-form-label-required Last Name
                  input#lname.uk-input(type="text" required)

              div
                label
                  div.uk-form-label.uk-form-label-required Phone Number
                  input#phone.uk-input(type="tel" required)

              div
                label
                  div.uk-form-label.uk-form-label-required Email
                  input#email.uk-input(type="email" required)


              //- Regional shipping
              div.uk-grid-small(uk-grid)

                div.uk-width-1-1
                  label
                    div.uk-form-label.uk-form-label-required County
                    select#county.uk-select
                      option(value="Nairobi") Nairobi

              div.uk-grid-small(uk-grid)

                div.uk-width-expand
                  label
                    div.uk-form-label.uk-form-label-required Address
                    input#address.uk-input(type="text")

                

              div.uk-grid-small(uk-grid)

                div(class="uk-width-1-3 uk-width-1-3@s")
                  label
                    div.uk-form-label Post Code
                    input#postcode.uk-input(type="text")

                div.uk-width-expand
                  label
                    div.uk-form-label Street
                    input#street.uk-input(type="text")

                div(class="uk-width-1-3 uk-width-1-6@s")
                  label
                    div.uk-form-label House
                    input#house.uk-input(type="text")

              div.uk-grid-small(class="uk-child-width-1-3 uk-child-width-1-3@s" uk-grid)

                div
                  label
                    div.uk-form-label Building
                    input#building.uk-input(type="text")

                div
                  label
                    div.uk-form-label Entrance
                    input#entrance.uk-input(type="text")

                div
                  label
                    div.uk-form-label Floor
                    input#floor.uk-input(type="text")

              div
                label
                  div.uk-form-label Apartment
                  input#apartment.uk-input(type="text")

              div.uk-width-1-1
                label
                  div.uk-form-label Comment
                  textarea#comment.uk-textarea(
                    rows="2"
                    placeholder="Additional information: phone numbers or doorphone code")

              div.uk-width-expand( style="margin-left:5px; margin-top:15px;")
                button#save-shipping.uk-button.uk-button-primary( type='submit') Save Address
                button#next-btn.uk-button.uk-button-secondary(style="float:right;" , type='submit') Next

  script.
    var addresses = !{JSON.stringify(addresses)} ;

  script(src="scripts/shipping.js") 
