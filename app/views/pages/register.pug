extends /layouts/_default

block vars
  -
    page = {
      title: 'Login'
    }

block default 

 .uk-section
  .uk-width-1-1
    .uk-container
      .uk-grid-margin.uk-grid.uk-grid-stack(uk-grid='')
        div(class='uk-width-1-1@m')
          div.uk-margin.uk-width-large.uk-margin-auto.uk-card.uk-card-default.uk-card-body.uk-box-shadow-large
            h3.uk-card-title.uk-text-center Sign up today. It&apos;s free!
            a.login-with-twitter.facebook-signin.w-inline-block.uk-button.uk-button-primary.uk-button-large(href='/auth/facebook')
              img.twitter-logo-sigin(src='images/facebook2.svg', width='23')
              .twitter-sigin Sign in with Facebook
            .or - OR -
            form#register_form
              .uk-margin
                .uk-inline.uk-width-1-1
                  span.uk-form-icon(uk-icon='icon: user') 
                  input#name_field.uk-input.uk-form-large(type='text', placeholder='First and last name')
              .uk-margin
                .uk-inline.uk-width-1-1
                  span.uk-form-icon(uk-icon='icon: mail')
                  input#email_field.uk-input.uk-form-large(type='text', placeholder='Email address')
              .uk-margin
                .uk-inline.uk-width-1-1
                  span.uk-form-icon(uk-icon='icon: lock')
                  input#pass_field.uk-input.uk-form-large(type='password', placeholder='Set a password')
              .uk-margin.uk-grid-small.uk-child-width-auto.uk-grid
                label
                  input.uk-checkbox(type='checkbox')
                  |  I agree the Terms and Conditions.
              .uk-margin
                button.uk-button.uk-button-primary.uk-button-large.uk-width-1-1(type='submit') Sign up
              .uk-text-small.uk-text-center
                | Already have an account? 
                a(href='/login', uk-switcher-item='1') Log in

 script(src="scripts/auth.js")                 