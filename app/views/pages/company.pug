doctype html
html(lang="en")
  head
    meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    // Meta, title, CSS, favicons, etc.
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="icon" href="images/favicon.ico" type="image/ico")
    title Lambano People
    link(rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:200,300")
    // Bootstrap
    link(href="css/bootstrap.min.css" rel="stylesheet")
    link(href="css/custom.css" rel="stylesheet")
    link(href="css/font-awesome.min.css" rel="stylesheet")
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@8.13.0/dist/sweetalert2.all.min.js")

  body.nav-md
    .container.body
      .main_container
        .col-md-3.left_col
          .left_col.scroll-view
            .navbar.nav_title(style="border: 0;")
              a.site_title(href="/")
                img(src="images/icons/logo.png" height="20" alt="Home")
                span.site_title_text Lambano People
            .clearfix
            br
            // sidebar menu
            #sidebar-menu.main_menu_side.hidden-print.main_menu
              .menu_section
                ul.nav.side-menu
                  li
                    a(href="/" style="margin: 0px;")
                      i
                        img(src="images/icons/approved.svg" height="20" alt="Dashboard")
                      span    Dashboard
                  li
                    a(href="#" style="margin: 0px;")
                      i
                        img(src="images/icons/man-in-office-desk-with-computer.svg" height="20" alt="Admin")
                      span     Admin
                  if role == "1" || role == "2" || role == "3"  
                      li
                        a(href="/company" style="margin: 0px;")
                          i
                            img(src="images/icons/home.svg" height="20" alt="Company")
                          span     Company
                  li
                    a(style="margin: 0px;")
                      i
                        img(src="images/icons/24-hours.svg" height="20" alt="Shifts")
                      span     Shifts 
                  li
                    a(style="margin: 0px;")
                      i
                        img(src="images/icons/study.svg" height="20" alt="Training")
                      span     Training 
                  li
                    a(style="margin: 0px;")
                      i
                        img(src="images/icons/placeholder.svg" height="20" alt="Locations")
                      span     Locations
                  li
                    a(style="margin: 0px;")
                      i
                        img(src="images/icons/new-file.svg" height="20" alt="Logs")
                      span       Logs 
                  li
                    a(style="margin: 0px;" href="/logout")
                      span       Log out     
            // /sidebar menu
        // top navigation
        .top_nav
          .nav_menu
            nav
              .nav.toggle
                a#menu_toggle
                  i.fa.fa-bars
              ul.nav.navbar-nav.navbar-right
                li
                  a.user-profile(href="javascript:;")
                    img(src="images/img.png" alt="")
                    span.user-name
                li.nav_item
                  a(href="#")
                    img(src="images/icons/notification.svg" alt="")
                li.nav_item
                  a(href="#")
                    img(src="images/icons/settings.svg" alt="")
        // /top navigation
        // page content
        .right_col(role="main")
          // /page content
          // /footer content
          .row
            .col-lg-12
              div(role="tabpanel" data-example-id="togglable-tabs")
                ul#myTab.nav.nav-tabs(role="tablist")
                  li.active(role="presentation")
                    a#dash-tab(href="#tab_dash" role="tab" data-toggle="tab" aria-expanded="true") Dashboard
                  li(role="presentation")
                    a#company-tab(href="#tab_company" role="tab" data-toggle="tab" aria-expanded="false") Company
                  li(role="presentation")
                    a#employee-tab(href="#tab_employee" role="tab" data-toggle="tab" aria-expanded="false") Employees
                #myTabContent.tab-content
                  #tab_dash.tab-pane.fade.active.in(role="tabpanel" aria-labelledby="dash-tab")
                    div(role="main")
                      // top tiles
                      .tile_count.row
                        .bar_primary
                        .col-lg-offset-3.col-md-2.col-sm-4.col-xs-6.tile_stats_count
                          .row.tile_child
                            .col-md-2
                              span
                                i.fa.fa-2x.fa-home.stats_icon
                            .col-md-6.description
                              #num_co.count ---
                              span.count_bottom No. of Companies
                        .col-md-2.col-sm-4.col-xs-6.tile_stats_count
                          .row.tile_child
                            .col-md-2
                              span
                                i.fa.fa-2x.fa-users.stats_icon
                            .col-md-6.description
                              #num_users.count ---
                              span.count_bottom Number of Users
                      // /top tiles
                      .col.col-lg-6.col-sm-12
                        .bar.company_bar_primary
                          p  New Company
                        section.login_content
                          form#createCompanyForm
                            .row
                              .col.col-lg-6.col-sm-12.col-xs-12
                                input#company_name.form-control(type="text" placeholder="Company Name" required="")
                              .col.col-lg-6.col-sm-12.col-xs-12
                                input#address.form-control(type="text" placeholder="Address 1" required="")
                            .row
                              .col.col-lg-6.col-sm-12.col-xs-12
                                input#company_no.form-control(type="text" placeholder="Company Number" required="")
                              .col.col-lg-6.col-sm-12.col-xs-12
                                input#address2.form-control(type="text" placeholder="Address 2")
                            .row
                              .col.col-lg-6.col-sm-12.col-xs-12
                                input#company_tier.form-control(type="text" placeholder="Company Tier" required="")
                              .col.col-lg-6.col-sm-12.col-xs-12
                                input#city.form-control(type="text" placeholder="City" required="")
                            .row
                              .col.col-lg-6.col-sm-12.col-xs-12
                                input#location_no.form-control(type="text" placeholder="Number of Locations" required="")
                              .col.col-lg-6.col-sm-12.col-xs-12
                                input#postcode.form-control(type="text" placeholder="Postcode" required="")
                            .motto Admin Details
                            .row
                              .col.col-lg-6.col-sm-12.col-xs-12
                                input#fname.form-control(type="text" placeholder="First Name" required="")
                              .col.col-lg-6.col-sm-12.col-xs-12
                                input#lname.form-control(type="text" placeholder="Last Name" required="")
                            .row
                              .col.col-lg-6.col-sm-12.col-xs-12
                                input#email.form-control(type="text" placeholder="Email Address" required="")
                              .col.col-lg-6.col-sm-12.col-xs-12
                                input#phone.form-control(type="text" placeholder="Phone Number" required="")
                            div
                              button.btn.btn-default.submit.btn_primary  Create Company 
                            .clearfix(style="padding-bottom: 40px;")
                      .col.col-lg-6.col-sm-12.col-xs-12
                        .bar.user_bar_primary
                          p  New User
                        section.login_content
                          form#addUserForm
                            .row
                              .col.col-lg-6.col-sm-12.col-xs-12
                                input#u_fname.form-control(type="text" placeholder="First Name" required="")
                              .col.col-lg-6.col-sm-12.col-xs-12
                                input#u_lname.form-control(type="text" placeholder="Last Name" required="")
                            .row
                              .col.col-lg-6.col-sm-12.col-xs-12
                                input#u_address1.form-control(type="text" placeholder="Address 1" required="")
                              .col.col-lg-6.col-sm-12.col-xs-12
                                input#u_address2.form-control(type="text" placeholder="Address 2")
                            .row
                              .col.col-lg-6.col-sm-12.col-xs-12
                                input#u_city.form-control(type="text" placeholder="City" required="")
                              .col.col-lg-6.col-sm-12.col-xs-12
                                input#u_postcode.form-control(type="text" placeholder="Postcode" required="")
                            .row
                              .col.col-lg-6.col-sm-12.col-xs-12
                                input#u_email.form-control(type="email" placeholder="Email Address" required="")
                              .col.col-lg-6.col-sm-12.col-xs-12
                                input#u_phone.form-control(type="text" placeholder="Phone Number" required="")
                            .motto Admin Details
                            .row
                              .col.col-lg-4.col-sm-12.col-xs-12
                                br
                                select#u_company.form-control
                                  option#-1 Select Company
                                br
                              br
                              .col.col-lg-4.col-sm-12.col-xs-12
                                select#u_role.form-control
                                  option(selected="" disabled="") Select Role
                                  if role == "1"
                                    option(value="1") Super Admin
                                  if role == "1" 
                                    option(value="2") Company Admin
                                  if role == "1" || role == "2"
                                    option(value="3") Company Manager
                                    option(value="4") Company Auditor
                                    option(value="5") Company Manager (Employee)
                                  option(value="6") Company Employee
                                br
                              .col.col-lg-4
                                input#u_location.form-control(type="text" placeholder="Location" required="")
                                br
                            div
                              button.btn.btn-default.submit.btn_secondary  Create User 
                            .clearfix(style="padding-bottom: 40px;")
                  #tab_company.tab-pane.fade(role="tabpanel" aria-labelledby="company-tab")
                    // top tiles
                    .tile_count.row
                      .bar_flex
                        .row
                          .col.col-lg-3.col-sm-12.col-xs-12
                            label Select Company:
                            select#s_company.form-control  
                      .col-md-2.col-sm-4.col-xs-6.tile_stats_count
                        .row.tile_child
                          .col-md-2
                            span
                              img(src="images/icons/hierarchy-levels.svg" width="30" alt="")
                          .col-md-6.description
                            #company_tier_d.count ---
                            span.count_bottom Company Tier
                      .col-md-2.col-sm-4.col-xs-6.tile_stats_count
                        .row.tile_child
                          .col-md-2
                            span
                              img(src="images/icons/hierarchy-levels.svg" width="30" alt="")
                          .col-md-6.description
                            #noa_d.count ---
                            span.count_bottom Number of Admins
                      .col-md-2.col-sm-4.col-xs-6.tile_stats_count
                        .row.tile_child
                          .col-md-2
                            span
                              img(src="images/icons/hierarchy-levels.svg" width="30" alt="")
                          .col-md-6.description
                            #nom_d.count ---
                            span.count_bottom Number of Managers
                      .col-md-2.col-sm-4.col-xs-6.tile_stats_count
                        .row.tile_child
                          .col-md-2
                            span
                              img(src="images/icons/hierarchy-levels.svg" width="30" alt="")
                          .col-md-6.description
                            #noe_d.count ---
                            span.count_bottom Number of Employees
                    // /top tiles
                    span.list_head  Admin/s 
                    #admin_list.row(style="margin-top: 20px;")  
                    span.list_head  Manager/s  
                    #manager_list.row(style="margin-top: 20px;")  
                  #tab_employee.tab-pane.fade(role="tabpanel" aria-labelledby="employee-tab")
                    .bar_primary(style="margin-top: 20px;")
                    #employee_list(style="margin-top: 20px;")
    // jQuery
    script(src="js/jquery-3.2.1.min.js")
    // Bootstrap
    script(src="js/bootstrap.min.js")
    // FastClick
    // Custom Theme Scripts
    script(src="js/custom.min.js")
    script(src="js/company.js")
