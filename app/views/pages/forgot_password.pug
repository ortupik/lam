extends /layouts/_default

block vars
  -
    page = {
      title: 'Forgot Password'
    }

block default 

 .uk-section
  .uk-width-1-1
    .uk-container
      .uk-grid-margin.uk-grid.uk-grid-stack(uk-grid='')
        div(class='uk-width-1-1@m')
          form.uk-margin.uk-width-large.uk-margin-auto.uk-card.uk-card-default.uk-card-body.uk-box-shadow-large
            h3.uk-card-title.uk-text-center Forgot your password?
            p.uk-text-center.uk-margin-auto(class='uk-width-medium@s') Enter your email address and we will send you a link to reset your password.
            form
              .uk-margin
                .uk-inline.uk-width-1-1
                  span.uk-form-icon(uk-icon='icon: mail')
                  input.uk-input.uk-form-large(type='text', placeholder='Email address')
              .uk-margin
                button.uk-button.uk-button-primary.uk-button-large.uk-width-1-1 Send Email
              .uk-text-small.uk-text-center
                a(href='/login', uk-switcher-item='1') Back to login

  