extends /layouts/_default

block vars
  -
    page = {
      title: 'Login'
    }

block default 

 .uk-section
  .uk-width-1-1
    .uk-container
      .uk-grid-margin.uk-grid.uk-grid-stack(uk-grid='')
        div(class='uk-width-1-1@m')
          form.uk-margin.uk-width-large.uk-margin-auto.uk-card.uk-card-default.uk-card-body.uk-box-shadow-large
            h3.uk-card-title.uk-text-center Sign in
            a.login-with-twitter.facebook-signin.w-inline-block.uk-button.uk-button-primary.uk-button-large(href='/auth/facebook')
              img.twitter-logo-sigin(src='images/facebook2.svg', width='23')
              .twitter-sigin Sign in with Facebook
            .or - OR -
            form
              .uk-margin
                .uk-inline.uk-width-1-1
                  span.uk-form-icon(uk-icon='icon: mail')
                  input.uk-input.uk-form-large(type='text', placeholder='Email address')
              .uk-margin
                .uk-inline.uk-width-1-1
                  span.uk-form-icon(uk-icon='icon: lock')
                  input.uk-input.uk-form-large(type='password', placeholder='Password')
              .uk-margin.uk-text-center.uk-text-small(class='uk-text-right@s')
                a(href='/forgot_password', uk-switcher-item='2') Forgot Password?
              .uk-margin
                button.uk-button.uk-button-primary.uk-button-large.uk-width-1-1 Login
              .uk-text-small.uk-text-center
                | Not registered? 
                a(href='/register', uk-switcher-item='0') Create an account
  